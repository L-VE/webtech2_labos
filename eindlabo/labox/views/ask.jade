block content
    #wholeContainer.ordinaryUser
        #baseContent
          #header
            #goBack
                img(id="goBackArrow", src="../images/arrow_goBack_white.png")
            h1 IMD WALL
            #account
                img(id="accountPic", src="../images/user_white.png")
          //#login
