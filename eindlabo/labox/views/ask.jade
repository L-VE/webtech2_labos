extends layout

block content
    #wholeContainer.ordinaryUser
        #baseContent
          #header 
            #account
                img(id="accountPic", src= "#{userImg}")          
                h2(class="fbUsername") Hello, 
                    span(class='accountname') #{user.displayname}
                    ! 
            h1
            //#userlogout
            a(class='logout', href='/logout', alt='Logout', title='logout')
                .te  Logout
          //#login
          //  h2 Login here
          //  ul
          //      li: img(id="facebook", src="../images/facebook_white.png")
          //      li: img(id="twitter", src="../images/twitter_white.png")
          #content.askBody
            #leftSide
                p.category 
                    span Current questions (*)
                    span.hiddenSpan #{facebookUserID}
                #topicList
                    span(class='hiddenMessageCount') #{count}
                    ul#questionList(class='allCurrentQuestion')
                        for q in questions
                            li(id='message#{q.id}', class='questionItem animateQuestion', data-votedup='false', data-voteddown='false')
                                div(class='messageCon even #{q.chatType}')
                                    span(class='typeColor#{q.chatType}')
                                    .messageConSec
                                        .messageDetails
                                            .profile
                                                img(src= "#{q.senderPicURL}", alt='sender', id='sender')
                                            .votes
                                                .voteAction
                                                    ul
                                                        li
                                                            span(class='up voteUp')
                                                        li
                                                            .voteInfo
                                                                h1.votesNr
                                                                    .voteCounter #{q.votes}
                                                        li
                                                            span(class='down voteDown')
                                        .messageContent
                                            .name
                                                h1 #{q.sender} 
                                                    span(class='says') says:
                                            .text
                                                h2 #{q.message}
                                            .time
                                                h3 #{q.chatTime.toDateString()}

                            
                              
            #rightSide
                p.questionHeader
                    span Send a message
            
                ul#form 
                    li: #sendTypes
                            input(type='radio', name='questionType', id='questionType', value='question') 
                            label(for='questionType', class='sendType', id='q') Question
                            input(type='radio',name='questionType', id='answerType', value='answer') 
                            label(for='answerType', class='sendType', id='a') Answer
                    li: p.errorMessage
                    li: #inlineButton
                            textarea(name='questionField', id='questionField', placeholder="your message", maxlength="500", rows="6" )
                            input#submitQuestion(type="submit", value="Send")
                    li: #footerAsk
                            p.footerinfo * red = question, green = answer
